<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context=".MainActivity5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hello"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="103dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Добро пожаловать!"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginTop="103dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Войдите, чтобы пользоваться функциями \nприложения"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вход по E-mail"
            android:textColor="#7E7E9A"
            android:textSize="14sp"
            android:layout_marginTop="64dp"
            android:layout_marginLeft="40dp"/>

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:backgroundTint="#EBEBEB"
            android:ems="10"
            android:hint="example@mail.ru"
            android:inputType="textEmailAddress"
            android:paddingLeft="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="40dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kkk"
            android:fontFamily="sans-serif-light"
            android:onClick="button"
            android:text="Далее"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Или войдите с помощью"
            android:textColor="#939396"
            android:textSize="15sp"
            android:layout_marginTop="302dp"
            android:layout_marginLeft="117dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roma"
            android:text="Войти с Яндекс"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>